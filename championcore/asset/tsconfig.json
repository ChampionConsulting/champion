{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"ChampionCore/*": ["js/*"]
		},

		"outDir": "./dist/",

		"sourceMap": true,
		"module": "es6",
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",

		"isolatedModules":  true,
		"strict":           true,
		"strictNullChecks": true,

		"noImplicitAny":     true,
		"noImplicitThis":    true,
		"noImplicitReturns": true
	}
}